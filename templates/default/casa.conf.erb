# Generated by Chef for <%= node[:fqdn] %>

upstream casa {
  server 127.0.0.1:<%= @port %> fail_timeout=10s;
}

##LISTEN ON HTTPS##
server {
  server_name <%= @fqdn %>;
  listen 443;
  ssl on;
  ssl_certificate /etc/ssl/certs/<%= @fqdn %>.crt;
  ssl_certificate_key /etc/ssl/private/<%= @fqdn %>.key;
  root <%= @path %>;
  index index.html;
  client_body_buffer_size 100m;
  client_max_body_size 100m;

  location / {
   proxy_pass http://casa;
   proxy_read_timeout  600s;
   proxy_set_header X-Real-IP $remote_addr;
   proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
   proxy_set_header Host $http_host;
   proxy_set_header X-Forwarded-Proto https;
   proxy_set_header X-Forwarded-Ssl on;
  }
}

##REDIRECT ALL HTTP REQUESTS TO HTTPS##
server {
  listen 80;
  return 301 https://$host$request_uri;
}

<% if node[:fqdn] == 'casa.m.ucla.edu' %>
server {
  server_name apps.ucla.edu;
  listen 443;
  ssl on;
  ssl_certificate /etc/ssl/certs/apps.ucla.edu.crt;
  ssl_certificate_key /etc/ssl/private/apps.ucla.edu.key;
  return 301 https://<%= @fqdn %>$request_uri;  
}

server {
  server_name apps.ucla.edu;
  listen 80;
  return 301 https://<%= @fqdn %>$request_uri;
}
<% end %>
